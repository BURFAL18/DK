<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:background="#000000"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DigiKirana : INVENTORY "
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#09F613"
            android:layout_gravity="center"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"

            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#FF0606"
            />
        <EditText
            android:id="@+id/xproname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"

            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
              android:textStyle="bold"
             android:background="#FF0606"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xprice"
            android:textColor="#FFFFFF"
            android:ems="10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QTY"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#FF0606"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xqty"
            android:textColor="#FFFFFF"
            android:ems="10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0606"

            android:text="SUBTOTAL"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
        android:id="@+id/xsubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:ems="10"  />

</LinearLayout>

    <LinearLayout
        android:id="@+id/xpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColor="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT"
            android:textStyle="bold"
            android:background="#FF0606"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtpay"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:padding="3dp"
            android:layout_margin="10sp"
            android:ems="10"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALANCE"
            android:textStyle="bold"
            android:background="#FF0606"
            android:textColor="#FFFFFF"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/xbal"
        android:textColor="#fff"
        android:enabled="false"
        android:ems="10" />
    </LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal">


    <Button
        android:id="@+id/xadd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#035EA6"
        android:elevation="3dp"
        android:text="ADD"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


 <TableLayout
 android:layout_width="match_parent"
 android:layout_height="360dp"
 android:id="@+id/xtable"
android:elevation="3dp"
     android:background="#FF1E4D"
android:foregroundTint="#FFFFFF"

 android:stretchColumns="*">

    <TableRow  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbrow1">
         <TextView
             android:id="@+id/xtproname"
             android:textColor="#FFFFFF"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Product Name"
             android:textStyle="bold"
             android:background="#03A9F4"
             />
    <TextView
        android:id="@+id/xtprice"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        />
    <TextView
        android:id="@+id/xtqty"
        android:textStyle="bold"
        android:background="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/xttotal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        />
    </TableRow>

</TableLayout>
    </LinearLayout>
</LinearLayout>